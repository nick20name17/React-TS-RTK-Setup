{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "src",
		"paths": {
			"assets/*": ["assets/*"],
			"components/*": ["components/*"],
			"config/*": ["config/*"],
			"context/*": ["context/*"],
			"hooks/*": ["hooks/*"],
			"pages/*": ["pages/*"],
			"providers/*": ["providers/*"],
			"store/*": ["store/*"],
			"types/*": ["types/*"],
			"utils/*": ["utils/*"]
		}
	},
	"include": ["src"],
	"files": ["custom.d.ts", "reset.d.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
